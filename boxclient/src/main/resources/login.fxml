<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.PasswordField?>

<VBox prefHeight="150.0" prefWidth="150.0" fx:id="mainVBox" fx:controller="ru.pronichev.boxclient.LoginWindowController" xmlns:fx="http://javafx.com/fxml" alignment="center" >
         <children>
            <VBox prefHeight="200.0" prefWidth="100.0">
                  <Label text="Введите логин" />
                  <TextField fx:id="loginField" />
                  <Label text="Введите пароль" />
                  <PasswordField fx:id="passField" onAction="#sendAuth"/>
            </VBox>
            <Button prefHeight="27.0" prefWidth="180.0" text="Подключится" onAction="#sendAuth" />
         </children>
</VBox>
